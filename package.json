{
  "name": "@octokit/auth-oauth-app",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "GitHub OAuth App authentication for JavaScript",
  "scripts": {
    "build": "pika build",
    "test": "jest --coverage"
  },
  "repository": "https://github.com/octokit/auth-oauth-app.js",
  "keywords": [
    "github",
    "octokit",
    "authentication",
    "oauth",
    "api"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/octokit/auth-oauth-app.js/issues"
  },
  "homepage": "https://github.com/octokit/auth-oauth-app.js#readme",
  "dependencies": {
    "@octokit/request": "^5.3.0",
    "@octokit/request-error": "^1.1.0",
    "@octokit/types": "^2.0.0",
    "@types/btoa-lite": "^1.0.0",
    "btoa-lite": "^1.0.0",
    "universal-user-agent": "^4.0.0"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.8.1",
    "@pika/plugin-build-web": "^0.8.1",
    "@pika/plugin-ts-standard-pkg": "^0.8.1",
    "@types/fetch-mock": "^7.3.1",
    "@types/jest": "^25.1.0",
    "fetch-mock": "^8.0.0",
    "jest": "^25.1.0",
    "semantic-release": "^17.0.0",
    "semantic-release-plugin-update-version-in-files": "^1.0.0",
    "ts-jest": "^25.1.0",
    "typescript": "^3.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  }
}
